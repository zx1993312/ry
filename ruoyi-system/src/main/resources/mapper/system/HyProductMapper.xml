    <sql id="selectHyProductVo">
        select 
        p.id, 
        p.product_name, 
        p.brief_introduction, 
        p.sold_number, 
        p.stock_number, 
        p.state, 
        p.snap_up_date, 
        p.send_code_date,  
        p.appointment_date,  
        p.appointment_mode, 
        p.use_date, 
        p.shop_id,
        p.limited_quantity,
        p.product_order_by,
        p.customer_service_tel,
        p.share_title,
        p.sal_state,
        p.lable_id,
        s.shop_name,
        a.pciture_address,
        c.poster_address,
        l.lable_name,
        d.deatil_picture
        from 
        hy_product p
        LEFT JOIN hy_shop s ON  p.shop_id=s.id
        LEFT JOIN hy_picture a ON a.product_id = p.id
        LEFT JOIN hy_poster c ON c.product_id=p.id
        LEFT JOIN hy_lable l ON p.lable_id=l.id
        LEFT JOIN hy_deatil_picture d ON d.product_id=p.id
        where 1=1
    </sql>
    
    <sql id="selectHyProductVoTest">
        select 
        p.id, 
        p.product_name, 
        p.brief_introduction, 
        p.sold_number, 
        p.stock_number, 
        p.state, 
        p.snap_up_date, 
        p.send_code_date,  
        p.appointment_date,  
        p.appointment_mode, 
        p.use_date, 
        p.shop_id,
        p.limited_quantity,
        p.product_order_by,
        p.customer_service_tel,
        p.share_title,
        p.sal_state,
        p.lable_id,
        s.shop_name,
        a.pciture_address,
        c.poster_address,
        l.lable_name,
        d.deatil_picture,
        b.business_name
        from 
        hy_product p
        LEFT JOIN hy_shop s ON  p.shop_id=s.id
        LEFT JOIN hy_picture a ON a.product_id = p.id
        LEFT JOIN hy_poster c ON c.product_id=p.id
        LEFT JOIN hy_lable l ON p.lable_id=l.id
        LEFT JOIN hy_deatil_picture d ON d.product_id=p.id
        LEFT JOIN hy_business b ON s.business_id=b.id
       	ORDER BY  p.product_order_by DESC 
        
    </sql>
    
