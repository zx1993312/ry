<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.HyInventoryMapper">
    
    <resultMap type="HyInventory" id="HyInventoryResult">
        <result property="id"    column="id"    />
        <result property="materialCode"    column="material_code"    />
        <result property="materialName"    column="material_name"    />
        <result property="materialType"    column="material_type"    />
        <result property="materialAddress"    column="material_address"    />
        <result property="materialNumber"    column="material_number"    />
        <result property="state"    column="state"    />
        <result property="materialId"    column="material_id"    />
    </resultMap>

    <sql id="selectHyInventoryVo">
        select id, material_code, material_name, material_type, material_address, material_number, state, material_id from hy_inventory
    </sql>

    <select id="selectHyInventoryList" parameterType="HyInventory" resultMap="HyInventoryResult">
        <include refid="selectHyInventoryVo"/>
        <where>  
            <if test="materialCode != null "> and material_code = #{materialCode}</if>
            <if test="materialName != null "> and material_name like concat('%', #{materialName}, '%')</if>
            <if test="materialType != null  and materialType != ''"> and material_type = #{materialType}</if>
            <if test="materialAddress != null  and materialAddress != ''"> and material_address = #{materialAddress}</if>
            <if test="materialNumber != null "> and material_number = #{materialNumber}</if>
            <if test="state != null  and state != ''"> and state = #{state}</if>
            <if test="materialId != null "> and material_id = #{materialId}</if>
        </where>
    </select>
    
    <select id="selectHyInventoryById" parameterType="Long" resultMap="HyInventoryResult">
        <include refid="selectHyInventoryVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertHyInventory" parameterType="HyInventory" useGeneratedKeys="true" keyProperty="id">
        insert into hy_inventory
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="materialCode != null">material_code,</if>
            <if test="materialName != null">material_name,</if>
            <if test="materialType != null">material_type,</if>
            <if test="materialAddress != null">material_address,</if>
            <if test="materialNumber != null">material_number,</if>
            <if test="state != null">state,</if>
            <if test="materialId != null">material_id,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="materialCode != null">#{materialCode},</if>
            <if test="materialName != null">#{materialName},</if>
            <if test="materialType != null">#{materialType},</if>
            <if test="materialAddress != null">#{materialAddress},</if>
            <if test="materialNumber != null">#{materialNumber},</if>
            <if test="state != null">#{state},</if>
            <if test="materialId != null">#{materialId},</if>
         </trim>
    </insert>

    <update id="updateHyInventory" parameterType="HyInventory">
        update hy_inventory
        <trim prefix="SET" suffixOverrides=",">
            <if test="materialCode != null">material_code = #{materialCode},</if>
            <if test="materialName != null">material_name = #{materialName},</if>
            <if test="materialType != null">material_type = #{materialType},</if>
            <if test="materialAddress != null">material_address = #{materialAddress},</if>
            <if test="materialNumber != null">material_number = #{materialNumber},</if>
            <if test="state != null">state = #{state},</if>
            <if test="materialId != null">material_id = #{materialId},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteHyInventoryById" parameterType="Long">
        delete from hy_inventory where id = #{id}
    </delete>

    <delete id="deleteHyInventoryByIds" parameterType="String">
        delete from hy_inventory where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>